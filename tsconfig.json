{
  "compilerOptions":  {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "lib":  ["ES2020", "DOM", "DOM.Iterable"],
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true
  },
  "include": ["src"]
}